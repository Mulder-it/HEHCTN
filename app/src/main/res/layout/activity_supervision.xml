<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".app.activity.SupervisionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supervision"
        android:textColor="@color/primaryColor"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"
        android:textSize="30sp"
        android:shadowRadius="2"/>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="IP"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Rack"
            />
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Slot"
            />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp">

        <EditText
            android:id="@+id/et_supervision_ip"
            android:inputType="number"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_edittext_background"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            />
        <EditText
            android:id="@+id/et_supervision_rack"
            android:inputType="number"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_edittext_background"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            />
        <EditText
            android:id="@+id/et_supervision_slot"
            android:inputType="number"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_edittext_background"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/bt_supervision_infopills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_info_24"
            android:layout_marginRight="25dp"
            android:onClick="onMainClickManager"/>
        <Button
            android:id="@+id/bt_supervision_pills"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Pills"
            android:onClick="onMainClickManager"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/bt_supervision_inforegulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_info_24"
            android:layout_marginRight="25dp"
            android:onClick="onMainClickManager"/>
        <Button
            android:id="@+id/bt_supervision_regulation"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Regulation"
            android:onClick="onMainClickManager"/>
    </TableRow>

</LinearLayout>